<Window x:Class="Кокарев_Вариант_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Кокарев_Вариант_3"
        mc:Ignorable="d"
        Title="Autorizations" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="StackPanel"  HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Логин: "/>
                <TextBox Margin="20,0,0,0" x:Name="TBoxLogin" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Пароль "/>
                <PasswordBox x:Name="PBoxPass" Width="100" Margin="15,0,0,0"/>
            </StackPanel>
            <Button x:Name="BtnLogin" Click="BtnLogin_Click" Content="Войти" Margin="5"/>
        </StackPanel>
        <Frame Name="Autorization" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
